        "func": "let data = msg.payload;\n\n// --- Checa se Ã© array ---\nif (!Array.isArray(data)) {\n    if (data && typeof data === \"object\" && Object.keys(data).length > 0) {\n        data = [data];\n    } else {\n        data = [];\n    }\n}\n\nmsg.payload = data;\n\n// --- Jogos locais ---\nconst jogosLocais = [\n  { nome: 'Enigma do Medo', genero: 'Terror / Aventura', plataforma: 'PC', lancamento: '2024', imagem: 'https://amimarinho.github.io/iara-games/assets/img/enigma_do_medo.jpg' },\n  { nome: 'Adore', genero: 'Action RPG / Roguelike', plataforma: 'PC/PS/Xbox/Switch', lancamento: '2023', imagem: 'https://amimarinho.github.io/iara-games/assets/img/adore.jpg' },\n  { nome: 'IrmÃ£o do Jorel e o Jogo Mais Importante da GalÃ¡xia', genero: 'Aventura / ComÃ©dia', plataforma: 'PC', lancamento: '2023', imagem: 'https://amimarinho.github.io/iara-games/assets/img/irmao-do-jorel-e-o-jogo-mais-importante-da-galaxia-banner.jpg' },\n  { nome: 'Dandy Ace', genero: 'Roguelike / AÃ§Ã£o', plataforma: 'PC/Xbox/Switch', lancamento: '2021', imagem: 'https://amimarinho.github.io/iara-games/assets/img/dandy_ace.jpg' },\n  { nome: 'Mark of the Deep', genero: 'AÃ§Ã£o / Aventura', plataforma: 'PC', lancamento: '2023', imagem: 'https://amimarinho.github.io/iara-games/assets/img/mark-of-the-deep-banner.png' },\n  { nome: 'Redo', genero: 'Metroidvania / AÃ§Ã£o', plataforma: 'PC', lancamento: '2019', imagem: 'https://amimarinho.github.io/iara-games/assets/img/redo.jpg' },\n  { nome: 'Akane', genero: 'AÃ§Ã£o / Hack and Slash', plataforma: 'PC/Switch', lancamento: '2018', imagem: 'https://amimarinho.github.io/iara-games/assets/img/akane-banner.png' },\n  { nome: 'Dandara: Trials of Fear Edition', genero: 'Metroidvania', plataforma: 'PC/PS/Xbox/Switch/Mobile', lancamento: '2018', imagem: 'https://assets.nintendo.com/image/upload/ar_16:9,c_lpad,w_656/b_white/f_auto/q_auto/ncom/software/switch/70010000004800/1d561ffd7bfa532e60fab66b39d3f8aa290975b8b5f7dc3f37497b5c47574397' },\n  { nome: 'Unsighted', genero: 'AÃ§Ã£o / Aventura / RPG', plataforma: 'PC/PS/Xbox/Switch', lancamento: '2021', imagem: 'https://shared.fastly.steamstatic.com/store_item_assets/steam/apps/1062110/header.jpg?t=1709409664' },\n  { nome: 'Toren', genero: 'Aventura / Puzzle', plataforma: 'PC/PS4', lancamento: '2015', imagem: 'https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/320820/header.jpg?t=1628278359' },\n  { nome: 'Ekorella', genero: 'Aventura / Plataforma', plataforma: 'PC', lancamento: '2022', imagem: 'https://amimarinho.github.io/iara-games/assets/img/ekorella_vol1.png' }\n];\n\n// --- Processa jogos da API ---\nlet jogosAPI = [];\nif (Array.isArray(msg.payload)) {\n    jogosAPI = msg.payload.map(game => ({\n        nome: game.title || \"Sem nome\",\n        genero: game.genre || \"Desconhecido\",\n        plataforma: game.platform || \"NÃ£o informado\",\n        lancamento: game.release_date || \"Data nÃ£o informada\",\n        imagem: game.thumbnail || \"\"\n    }));\n}\n\n// --- Combina e ordena ---\nconst todosJogos = [...jogosLocais, ...jogosAPI];\ntodosJogos.sort((a, b) => a.nome.localeCompare(b.nome));\n\n// --- Salva globalmente ---\nglobal.set('games', todosJogos);\n\n// --- Envia payload ---\nmsg.payload = todosJogos;\nmsg.count = todosJogos.length;\n\nreturn msg;\n",
